<%= form_with(model: category, html: { class: "mt-4" }) do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <br>
  <div class="form-group">
    <%= form.label :icon %>
    <%= form.file_field :icon, id: 'icon_upload', class: "form-control-file" %>
  </div>
  <br>
  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
