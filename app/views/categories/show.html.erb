<div>
  <div>
    <div>
      <ul>
        <li>
  <%= link_to 'Back', categories_path %>
</li>
        <h2><strong><%= @category.name %></strong></h2>
        <li><%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete } %></li>
      </ul>
    </div>
    <p style="color: green"><%= notice %></p>

    <%= render @category %>
    <section>
      <div>
        <% @purchases.each do |purchase| %>
          <a href="<%= category_purchases_path(@category, purchase) %>">
          <%= render "purchases/purchase", purchase: purchase %>
          </a>
        <% end %>
      </div>
    </section>
  </div>

  <section>
      <a href="<%= new_category_purchase_path(@category) %>">
        <button>
          New purchase
        </button>
      </a>

      <%= link_to edit_category_path(@category) do %>
        <button>Edit category</button>
      <% end %>

      <%= button_to "Delete category", @category, method: :delete, data: { confirm: 'Are you sure?' } %>
    </section>
  </div>
