    <div class="row mt-2">
        <div class="col-md-12 text-center">
            <a href="<%= new_category_purchase_path(@category) %>" class="btn btn-lemon btn-block mx-auto w-100">
                <div class="border border-white p-2">
                    <strong>Add a New Purchase</strong>
                </div>
            </a>
        </div>
    </div>
  </div>

