<div class="container">
<nav class="navbar navbar-light bg-primary">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#"><strong>Categories</strong></a>
     
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        </li>
      </ul>
    </div>
  </nav>
  <div class="row">
  </div>
  <div class="row">
    <div class="col-md-6">
      <p class="text-success"><%= notice %></p>
    </div>
  </div>

  <%= render @category %>
  
  <section class="mt-3">
    <div>
      <% @purchases.each do |purchase| %>
        <%= render "purchases/purchase", purchase: purchase %>
      <% end %>
    </div>
  </section>
</div>

<section class="mt-3">
  <div class="container">
    <div class="row">
       <div class="col-md-6">
        <div class="btn-group">
          <a href="<%= new_category_purchase_path(@category) %>" class="btn btn-primary">
            New purchase
          </a>
          <%= link_to edit_category_path(@category), class: "btn btn-info" do %>
            Edit category
          <% end %>
          <%= button_to "Delete category", @category, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container mt-4">
  <%= link_to 'Back', categories_path, class: "btn btn-secondary float-left" %>
</div>

