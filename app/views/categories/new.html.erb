<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-primary">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand mx-auto" href="#"><strong>Categories</strong></a>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <!-- Include your category links here -->
          <% if @categories.present? %>
            <% @categories.each do |category| %>
              <li class="nav-item">
                <a class="nav-link" href="<%= category_path(category) %>"><%= category.name %></a>
              </li>
            <% end %>
          <% end %>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="row mt-4">
    <div class="col-md-12">
      <div class="container mt-4">
        <h2><strong>New category</strong></h2>
      </div>

      <%= render "form", category: @category %>
    </div>
  </div>
</div>

<!-- Move the Back button outside of the container -->
<div class="container mt-4">
  <%= link_to 'Back', categories_path, class: "btn btn-secondary float-left" %>
</div>
