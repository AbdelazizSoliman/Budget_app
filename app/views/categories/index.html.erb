<div class="container">
  <nav class="navbar navbar-light bg-primary">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="#"><strong>Categories</strong></a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <!-- Include your category links here -->
          <% @categories.each do |category| %>
            <li class="nav-item">
              <a class="nav-link" href="<%= category_path(category) %>"><%= category.name %></a>
            </li>
          <% end %>
        </ul>
      </div>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
        </li>
      </ul>
    </div>
  </nav>

<div class="container mt-4">
  <p style="color: green"><%= notice %></p>

  <div class="row">
    <!-- Your category cards here -->
    <% @categories.each do |category| %>
      <div class="col-md-4 mb-4">
        <a href="<%= category_path(category) %>" class="card-link">
          <div class="card">
            <!-- You can customize the card content as needed -->
            <div class="card-body">
              <%= render category %>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>

 <div class="container-fluid fixed-bottom">
    <div class="row mt-4">
        <div class="col-md-12 text-center">
           
                <a href="<%= new_category_path %>" class="btn btn-lemon btn-block mx-auto w-100">
                    <strong> <div class="border border-white p-4"> Add a New Category</div></strong>
                </a>
            
        </div>
    </div>
</div>


</div>
